{{> layout/header }}
<body id="page-top">
<div id="wrapper">
    {{> layout/sidebar }}
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            {{> layout/topbar }}

            <!-- 레이아웃 작업 시작 부분 -->
            <div class="container mt-5">
                <h2 class="mb-4 text-center fw-bold">메뉴 관리</h2>

                <div class="table-container">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <div class="page-info">
                            총 {{menuInfo.size}}개의 메뉴
                        </div>
                        <a href="/admin/menus/create" class="btn btn-sm btn-primary">새 메뉴 등록</a>
                    </div>

                    <table class="table table-hover align-middle">
                        <thead>
                        <tr>
                            <th style="width: 10%;">순서</th>
                            <th style="width: 30%;">상위 메뉴</th>
                            <th style="width: 30%;">메뉴 이름</th>
                            <th style="width: 15%;">공개 여부</th>
                            <th style="width: 15%;">관리</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#menuInfo}}
                            <tr>
                                <td>{{menuOrder}}</td>
                                <td>
                                    {{#parent}}{{parent.menuName}}{{/parent}}
                                    {{^parent}}-{{/parent}}
                                </td>
                                <td>{{menuName}}</td>
                                {{#visible}}
                                    <td><span class="badge bg-success">공개</span></td>
                                {{/visible}}
                                {{^visible}}
                                    <td><span class="badge bg-secondary">비공개</span></td>
                                {{/visible}}
                                <td>
                                    <a href="/admin/menus/update/{{id}}" class="btn btn-sm btn-primary">상세보기</a>
                                </td>
                            </tr>
                        {{/menuInfo}}
                        {{^menuInfo}}
                            <tr>
                                <td colspan="4" class="text-center text-muted">등록된 메뉴가 없습니다.</td>
                            </tr>
                        {{/menuInfo}}
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- 레이아웃 작업 종료 부분 -->
        </div>
        {{> layout/footer }}
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
    .table-container {
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
        padding: 20px;
        margin-top: 40px;
    }
    .table th {
        background-color: #f1f3f5;
    }
    .table td, .table th {
        vertical-align: middle;
    }
    .page-info {
        color: #6c757d;
        font-size: 0.9rem;
    }
    .btn-primary {
        background-color: #4e73df;
        border-color: #4e73df;
    }
</style>

{{#message}}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
          alert("{{{message}}}");
  });
    </script>
{{/message}}

</body>
</html>
